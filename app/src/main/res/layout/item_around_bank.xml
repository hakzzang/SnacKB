<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <variable name="aroundBank" type="hbs.com.snackb.models.AroundBank"/>
    </data>
    <LinearLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="320dp"
            android:layout_height="480dp"
            android:orientation="vertical">
        <androidx.cardview.widget.CardView
                android:orientation="vertical"
                android:id="@+id/iv_item_image"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
            <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="320dp"
                    android:layout_height="480dp">
                <ImageView
                        android:layout_width="320dp"
                        android:layout_height="480dp"
                        android:scaleType="fitXY"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        onBankImage="@{aroundBank.bankImage}"/>
                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:hint="12분"
                        android:text="@{aroundBank.bankWaitTime}"
                        android:fontFamily="@font/nanumgothic_extrabold"
                        android:textSize="@dimen/headline_large"
                        android:textColor="@color/md_white_1000"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        android:layout_margin="@dimen/margin_padding_size_medium"/>
                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:hint="기흥 국민은행"
                        android:text="@{aroundBank.bankName}"
                        android:fontFamily="@font/nanumgothic_extrabold"
                        android:textSize="@dimen/headline_x_normal"
                        android:textStyle="bold"
                        android:textColor="@color/md_white_1000"
                        android:layout_margin="@dimen/margin_padding_size_medium"
                        app:layout_constraintBottom_toTopOf="@id/tv_bank_address"
                        app:layout_constraintLeft_toLeftOf="parent"/>
                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/tv_bank_address"
                        android:hint="새우버거네 집 앞"
                        android:text="@{aroundBank.bankAddress}"
                        android:fontFamily="@font/nanumgothic_regular"
                        android:textSize="@dimen/headline_small"
                        android:textColor="@color/md_white_1000"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintLeft_toLeftOf="parent"
                        android:layout_marginLeft="@dimen/margin_padding_size_medium"
                        android:layout_marginBottom="@dimen/margin_padding_size_large"/>

                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/tv_bank_wait_people"
                        android:hint="1명"
                        android:text="@{aroundBank.bankWaitPeople}"
                        android:fontFamily="@font/nanumgothic_regular"
                        android:textSize="@dimen/headline_x_small"
                        android:textColor="@color/md_white_1000"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintBottom_toTopOf="@id/tv_bank_distance"
                        android:layout_marginRight="@dimen/margin_padding_size_medium"/>

                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/tv_bank_distance"
                        android:hint="2000m"
                        android:text="@{aroundBank.bankDistance}"
                        android:fontFamily="@font/nanumgothic_regular"
                        android:textSize="@dimen/headline_x_small"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        android:textColor="@color/md_white_1000"
                        android:layout_marginRight="@dimen/margin_padding_size_medium"
                        android:layout_marginBottom="@dimen/margin_padding_size_large"/>
            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.cardview.widget.CardView>
    </LinearLayout>
</layout>
