<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <variable name="aroundBank" type="hbs.com.snackb.models.AroundBank"/>
    </data>
    <androidx.cardview.widget.CardView
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:orientation="vertical"
            android:id="@+id/iv_item_image"
            android:layout_width="@dimen/app_item_width"
            android:layout_height="@dimen/app_item_height"
            app:cardElevation="2dp"
            app:cardCornerRadius="@dimen/margin_padding_size_small">

        <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="@dimen/app_item_width"
                android:layout_height="@dimen/app_item_height">

            <ImageView
                    android:id="@+id/iv_back_blur"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/app_item_height_half"
                    android:scaleType="fitXY"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"/>
            <View
                    android:layout_width="0dp"
                    android:layout_height="@dimen/app_item_height_half"
                    android:background="#D9191919"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"/>

            <ImageView
                    android:id="@+id/iv_icon"
                    android:layout_width="@dimen/app_item_icon_size"
                    android:layout_height="@dimen/app_item_icon_size"
                    app:layout_constraintBottom_toTopOf="@id/tv_title"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintVertical_chainStyle="packed"
                    onBankImage="@{aroundBank.appIcon}"/>

            <TextView
                    android:id="@+id/tv_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/md_grey_100"
                    android:layout_marginTop="@dimen/margin_padding_size_small"
                    android:text="@{aroundBank.appTitle}"
                    android:fontFamily="@font/nanumgothic_bold"
                    android:textSize="@dimen/text_size_medium"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/iv_icon"
                    app:layout_constraintVertical_chainStyle="packed"
                    app:layout_constraintBottom_toBottomOf="@id/iv_back_blur"/>

            <TextView
                    android:id="@+id/tv_point"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/md_amber_A400"
                    android:fontFamily="@font/nanumgothic_bold"
                    android:textSize="@dimen/text_size_large"
                    android:layout_marginBottom="@dimen/margin_padding_size_small"
                    android:layout_marginLeft="@dimen/margin_padding_size_medium"
                    app:layout_constraintTop_toBottomOf="@id/iv_back_blur"
                    app:layout_constraintBottom_toTopOf="@id/tv_bank_address"
                    app:layout_constraintVertical_chainStyle="packed"
                    app:layout_constraintLeft_toLeftOf="parent"/>

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/tv_bank_address"
                    android:text="@{aroundBank.appPublishName}"
                    android:fontFamily="@font/nanumgothic_regular"
                    android:textSize="@dimen/body_small"
                    android:textColor="@color/md_grey_800"
                    android:layout_marginBottom="@dimen/margin_padding_size_small"
                    app:layout_constraintVertical_chainStyle="packed"
                    app:layout_constraintBottom_toTopOf="@id/iv_like"
                    app:layout_constraintTop_toBottomOf="@id/tv_point"
                    app:layout_constraintLeft_toLeftOf="parent"
                    android:layout_marginLeft="@dimen/margin_padding_size_medium"/>
            <ImageView
                    android:id="@+id/iv_like"
                    android:layout_width="@dimen/margin_padding_size_medium"
                    android:layout_height="@dimen/margin_padding_size_medium"
                    android:src="@drawable/like"
                    android:layout_marginBottom="@dimen/margin_padding_size_small"
                    android:layout_marginLeft="@dimen/margin_padding_size_medium"
                    app:layout_constraintTop_toBottomOf="@id/tv_bank_address"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintBottom_toTopOf="@id/tv_bank_distance"
                    app:layout_constraintVertical_chainStyle="packed"/>

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/tv_bank_wait_people"
                    android:fontFamily="@font/nanumgothic_regular"
                    android:textSize="@dimen/body_small"
                    android:textColor="@color/md_grey_800"
                    android:text="@{String.valueOf(aroundBank.appHitCnt)}"
                    android:layout_marginLeft="@dimen/margin_padding_size_x_small"
                    app:layout_constraintTop_toTopOf="@id/iv_like"
                    app:layout_constraintLeft_toRightOf="@id/iv_like"
                    app:layout_constraintBottom_toBottomOf="@id/iv_like"/>

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/tv_bank_distance"
                    android:fontFamily="@font/nanumgothic_regular"
                    android:textSize="@dimen/body_small"
                    android:layout_marginLeft="@dimen/margin_padding_size_medium"
                    app:layout_constraintTop_toBottomOf="@id/iv_like"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintVertical_chainStyle="packed"
                    android:textColor="@color/md_grey_700"/>

            <ImageView
                    android:id="@+id/iv_go_to_play"
                    android:layout_width="@dimen/launcher_icon_size"
                    android:layout_height="@dimen/launcher_icon_size"
                    android:src="@drawable/go_to_playstore"
                    android:layout_marginRight="@dimen/margin_padding_size_medium"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/iv_back_blur"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
</layout>
