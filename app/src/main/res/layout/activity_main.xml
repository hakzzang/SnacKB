<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingTop="@dimen/margin_main_view_space_top"
        android:paddingLeft="@dimen/margin_main_view_space_side"
        android:layout_marginRight="@dimen/margin_main_view_space_side">
    <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/ll_greeting_container"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:contentDescription="@string/greeting_content_description"
            android:orientation="vertical">
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tv_greeting_title"
                android:fontFamily="@font/nanumgothic_extrabold"
                android:hint="@string/greeting_title"
                android:text="@string/greeting_title"
                android:textStyle="bold"
                android:textColor="@color/md_grey_900"
                android:textSize="@dimen/headline_normal"/>
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tv_greeting_subtitle"
                android:fontFamily="@font/nanumgothic_bold"
                android:hint="@string/gretting_subtitle"
                android:text="@string/gretting_subtitle"
                android:textStyle="bold"
                android:textColor="@color/md_grey_700"
                android:textSize="@dimen/body_normal"/>
    </LinearLayout>
    <androidx.recyclerview.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="@dimen/rv_finding_category_height"
            android:id="@+id/rv_finding_category"
            android:layout_marginLeft="@dimen/margin_main_view_space_side_negative"
            android:layout_marginRight="@dimen/margin_main_view_space_side_negative"
            app:layout_constraintTop_toBottomOf="@id/ll_greeting_container">

    </androidx.recyclerview.widget.RecyclerView>
    <androidx.recyclerview.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:id="@+id/rv_finding_bank"
            android:layout_marginLeft="@dimen/margin_main_view_space_side_negative"
            android:layout_marginRight="@dimen/margin_main_view_space_side_negative"
            app:layout_constraintTop_toBottomOf="@id/rv_finding_category"
            app:layout_constraintBottom_toTopOf="@id/btn_search_around_bank">

    </androidx.recyclerview.widget.RecyclerView>
    <Button
            android:layout_width="128dp"
            android:layout_height="64dp"
            android:id="@+id/btn_search_around_bank"
            android:text="@string/btn_search_around_title"
            android:hint="@string/btn_search_around_title"
            android:contentDescription="@string/search_around_content_description"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_margin="@dimen/margin_padding_size_medium"/>

</androidx.constraintlayout.widget.ConstraintLayout>