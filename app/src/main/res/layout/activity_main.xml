<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
        xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/md_white_1000">
    <com.google.android.material.appbar.AppBarLayout
            android:id="@+id/appbarlayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent">
        <com.google.android.material.appbar.CollapsingToolbarLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@android:color/transparent"
                app:layout_scrollFlags="scroll|exitUntilCollapsed">

            <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                <TextView
                        android:id="@+id/tv_greeting_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/nanumgothic_bold"
                        android:text="고객님,\n안녕하세요."
                        android:lineSpacingMultiplier="1.2"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        android:layout_marginTop="@dimen/margin_main_view_space_top"
                        android:layout_marginLeft="@dimen/margin_main_view_space_side"
                        android:textColor="@color/md_grey_900"
                        android:textSize="@dimen/headline_small"/>

                <LinearLayout
                        android:id="@+id/ll_today_point"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:paddingLeft="@dimen/margin_main_view_space_side"
                        android:paddingRight="@dimen/margin_main_view_space_side"
                        android:gravity="center_vertical"
                        android:layout_marginTop="@dimen/margin_padding_size_medium"
                        android:paddingTop="@dimen/margin_padding_size_small"
                        android:paddingBottom="@dimen/margin_padding_size_small"
                        app:layout_constraintTop_toBottomOf="@id/tv_greeting_name">
                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:includeFontPadding="false"
                            android:text="지금 획득 가능한 포인트"
                            android:gravity="center_vertical"
                            android:textColor="@color/md_grey_800"
                            android:fontFamily="@font/nanumgothic_regular"
                            android:textSize="@dimen/text_size_small"/>

                    <ImageView
                            android:id="@+id/iv_point"
                            android:layout_width="@dimen/ic_point_size"
                            android:layout_height="@dimen/ic_point_size"
                            android:layout_marginRight="8dp"
                            android:src="@drawable/ic_point"/>
                    <TextView
                            android:id="@+id/tv_total_point"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:gravity="center_vertical"
                            android:includeFontPadding="false"
                            android:textColor="@color/md_amber_A400"
                            android:fontFamily="@font/nanumgothic_bold"
                            android:textSize="@dimen/text_size_small"/>
                </LinearLayout>

                <androidx.recyclerview.widget.RecyclerView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/rv_finding_category"
                        android:paddingLeft="@dimen/margin_main_view_space_side"
                        app:layout_constraintTop_toBottomOf="@id/ll_today_point"
                        android:layout_marginTop="@dimen/margin_padding_size_medium"
                        android:clipToPadding="false"/>

                <androidx.recyclerview.widget.RecyclerView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/rv_finding_bank"
                        android:clipToPadding="false"
                        app:layout_constraintTop_toBottomOf="@id/rv_finding_category"
                        android:paddingLeft="@dimen/margin_main_view_space_side"
                        android:paddingBottom="@dimen/margin_padding_size_medium"
                        android:paddingRight="@dimen/margin_main_view_space_side">
                </androidx.recyclerview.widget.RecyclerView>
            </androidx.constraintlayout.widget.ConstraintLayout>
            <androidx.appcompat.widget.Toolbar
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    app:layout_collapseMode="parallax"/>
        </com.google.android.material.appbar.CollapsingToolbarLayout>
    </com.google.android.material.appbar.AppBarLayout>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_behavior="@string/appbar_scrolling_view_behavior">
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingTop="@dimen/margin_main_view_space_top"
                android:orientation="vertical">
            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/nanumgothic_bold"
                    android:textColor="@color/md_grey_900"
                    android:textSize="@dimen/headline_small"
                    android:gravity="center_vertical"
                    android:paddingLeft="@dimen/margin_main_view_space_side"
                    android:text="#MY"/>

            <LinearLayout
                    android:id="@+id/ll_total_point"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingLeft="@dimen/margin_main_view_space_side"
                    android:paddingRight="@dimen/margin_main_view_space_side"
                    android:gravity="center_vertical"
                    android:layout_marginTop="@dimen/margin_padding_size_medium"
                    android:paddingTop="@dimen/margin_padding_size_small"
                    android:paddingBottom="@dimen/margin_padding_size_small"
                    app:layout_constraintTop_toBottomOf="@id/tv_greeting_name">
                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:includeFontPadding="false"
                        android:text="현재 나의 포인트"
                        android:gravity="center_vertical"
                        android:textColor="@color/md_grey_800"
                        android:fontFamily="@font/nanumgothic_regular"
                        android:textSize="@dimen/text_size_small"/>

                <ImageView
                        android:id="@+id/iv_total_point"
                        android:layout_width="@dimen/ic_point_size"
                        android:layout_height="@dimen/ic_point_size"
                        android:layout_marginRight="8dp"
                        android:src="@drawable/ic_point"/>
                <TextView
                        android:id="@+id/tv_total_my_point"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:includeFontPadding="false"
                        android:textColor="@color/md_amber_A400"
                        android:fontFamily="@font/nanumgothic_bold"
                        android:textSize="@dimen/text_size_small"/>
            </LinearLayout>
            <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rv_my_account_list"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:clipToPadding="false"
                    android:paddingBottom="@dimen/margin_padding_size_medium"
                    android:layout_marginTop="@dimen/margin_padding_size_medium"/>

        </LinearLayout>
    </LinearLayout>
</androidx.coordinatorlayout.widget.CoordinatorLayout>
